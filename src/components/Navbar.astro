<header class="bg-blue-600 text-white shadow-md">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-2">
        <img src="/logo.svg" alt="Conecta Logo" class="h-10 w-10" />
        <h1 class="text-xl font-bold">Conecta</h1>
      </div>
      
      <nav class="hidden md:flex space-x-6">
        <a href="/" class="hover:text-blue-200 transition">Inicio</a>
        <a href="/servicios" class="hover:text-blue-200 transition">Servicios</a>
        <a href="/categorias" class="hover:text-blue-200 transition">Categorías</a>
        <a href="/mapa" class="hover:text-blue-200 transition">Mapa</a>
        <a href="/contacto" class="hover:text-blue-200 transition">Contacto</a>
      </nav>

      <div class="flex items-center space-x-4">
        <a href="/buscar" class="p-2 rounded-full hover:bg-blue-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </a>
        <button id="mobile-menu-button" class="md:hidden p-2 rounded-full hover:bg-blue-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="hidden md:hidden bg-blue-700">
    <div class="container mx-auto px-4 py-3 flex flex-col space-y-3">
      <a href="/" class="block py-2 hover:bg-blue-800 px-3 rounded">Inicio</a>
      <a href="/servicios" class="block py-2 hover:bg-blue-800 px-3 rounded">Servicios</a>
      <a href="/categorias" class="block py-2 hover:bg-blue-800 px-3 rounded">Categorías</a>
      <a href="/mapa" class="block py-2 hover:bg-blue-800 px-3 rounded">Mapa</a>
      <a href="/contacto" class="block py-2 hover:bg-blue-800 px-3 rounded">Contacto</a>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script> 