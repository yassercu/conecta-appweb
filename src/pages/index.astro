---
import Layout from "../layouts/Layout.astro";
import PromotedBusinessesCarousel from "@/components/PromotedBusinessesCarousel.jsx";
import FeaturedSections from "@/components/FeaturedSections.jsx";
---

<Layout title="Orbita - Descubre negocios locales" isHomePage={true}>
  <div class="space-y-16">
    <!-- Promoted Business Carousel -->
    <section class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold tracking-tight mb-4">
          Negocios Destacados
        </h2>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          Estos negocios brillan con luz propia en nuestra órbita comercial
        </p>
      </div>

      <PromotedBusinessesCarousel client:load />
    </section>

    <!-- Featured Sections with space theme -->
    <section class="relative py-16">
      <div class="absolute inset-0 bg-accent/5 -z-10"></div>
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold tracking-tight mb-4">
            Explora el Universo Comercial
          </h2>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            Descubre diferentes constelaciones de negocios por categoría
          </p>
        </div>

        <FeaturedSections client:load />
      </div>
    </section>
  </div>
</Layout>
