---
import Layout from '../layouts/Layout.astro';
import { SearchBar } from '@/components/search-bar';
import PromotedBusinessesCarousel from '@/components/PromotedBusinessesCarousel.jsx';
import FeaturedSections from '@/components/FeaturedSections.jsx';
---

<Layout title="ConectaApp - Descubre negocios locales">
  <div class="space-y-12">
    <!-- Hero Section -->
    <section class="text-center py-10">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-2">
        Explora Negocios Locales
      </h1>
      <p class="hidden md:block text-md md:text-lg text-muted-foreground mb-6">
        Encuentra lo mejor de tu comunidad.
      </p>
      <div class="max-w-lg mx-auto mb-6">
        <SearchBar client:load />
      </div>
      <a href="/search" class="w-full md:w-auto inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-primary-foreground h-10 px-4 py-2">
        Ver Todos los Negocios
      </a>
    </section>

    <!-- Promoted Business Carousel -->
    <PromotedBusinessesCarousel client:load />
    
    <!-- Featured Sections -->
    <FeaturedSections client:load />
  </div>
</Layout> 