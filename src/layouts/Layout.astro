---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Conecta App - Encuentra y promociona negocios locales" } = Astro.props;
import '../styles/globals.css';
import { Header } from '@/components/layout/header';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Script para inicializar el tema antes de la carga para evitar flash -->
    <script is:inline>
      try {
        // Verificar si hay un tema guardado en localStorage
        const savedTheme = localStorage.getItem('theme');
        // Aplicar tema guardado o usar la preferencia del sistema
        if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      } catch (e) {
        // Fallback silencioso en caso de error de localStorage o matchMedia
        console.warn("Error al inicializar el tema:", e);
      }
    </script>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <Header client:load />

      <main class="container flex-1 py-6">
        <slot />
      </main>

      <footer class="border-t py-6 md:py-0">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-16 md:flex-row">
          <p class="text-sm text-muted-foreground">
            &copy; 2025 ConectaApp. Todos los derechos reservados.
          </p>
          <nav class="flex items-center gap-4 text-sm">
            <a href="/about" class="text-muted-foreground hover:text-foreground">
              Sobre Nosotros
            </a>
            <a href="/terms" class="text-muted-foreground hover:text-foreground">
              TÃ©rminos
            </a>
            <a href="/privacy" class="text-muted-foreground hover:text-foreground">
              Privacidad
            </a>
          </nav>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  /* Importar estilos de Tailwind */
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style> 